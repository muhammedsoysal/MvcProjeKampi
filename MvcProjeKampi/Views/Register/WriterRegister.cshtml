@model EntityLayer.Dtos.WriterRegisterDto
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Yazar Üye Paneli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Üye Kayıt Ekranı</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @*<h3 class="mb-4 text-center">Bir Hesabın Var Mı?</h3>*@
                        @using(Html.BeginForm("WriterRegister","Register",FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @placeholder = "Adınız" })
                                @Html.ValidationMessageFor(x => x.WriterName)

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control", @placeholder = "Soyadınız" })
                                @Html.ValidationMessageFor(x => x.WriterSurName)

                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @placeholder = "Mail Adresiniz" })
                                @Html.ValidationMessageFor(x => x.WriterMail)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "Şifre", Type = "password" })
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "Şifre", Type = "password" })
                                <span toggle="#password-field2" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Kaydet</button>
                            </div>
                        }
                        <a href="/Login/WriterLogin">
                            <p class="w-100 text-center">
                                &mdash; Hesabım Var &mdash;
                            </p>
                        </a>

                        <p class="w-100 text-center">&mdash; Veya Sosyal Medya ile Giriş Yapın &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/login-form-20/js/main.js"></script>
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
</body>
</html>