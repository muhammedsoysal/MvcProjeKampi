@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @*@Html.Label("Admin ID")*@
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })
<br />
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        
        @*@Html.Label("Admin Şifre")*@
        @Html.HiddenFor(x => x.AdminPassword, new { @class = "form-control" })

        @Html.Label("Admin Rol")
        <select name="AdminRole" id="AdminRole  " class="form-control">
            <option value="A">A</option>
            <option value="B">B</option>
        </select>
        <br />
        @Html.Label("Durumu")
        @Html.DropDownListFor(x => x.AdminStatus, new SelectListItem[]{
                new SelectListItem(){Text="Aktif",Value="True"},
                new SelectListItem(){Text="Pasif",Value="False"} }, new { @class = "form-control" })
        <br />
        <button class="btn btn-outline-secondary" style="width: 100%;">Güncelle</button>
    </div>
}